<% include partials/header %>

    


<div class='container'>
    <header class='jumbotron'>
        <div class='container'>
            <h1>Welcome to YelpCamp</h1>
            <p>View our hand-picked compgroudns from all over the world</p>
            <p>
                <a  class='btn btn-primary btn-lg' href='/campgrounds/new'>Add New Campgrounds</a>
            </p>
        </div>
        
    </header>
    
    
    
    
    
    <div class='row text-center' style='display:flex; flex-wrap: wrap;'>
        
        <%campgrounds.forEach(function(x){%>
        <div class='col-md-3 col-sm-6'>
            <div class='thumbnail'>
                
                <img src='<%= x.image %>'>  
                <div class='caption'>
                    <h4><%= x.name %></h4>
                </div>
                <p>
                    <a href='/campgrounds/<%= x._id %>' class='btn btn-primary'>More Info</a>
                </p>
            </div>
        </div>
        <% }); %>
        
    </div>
    
            
    
    
    
    <a href='/'>Back</a>
</div>

<% include partials/footer %>